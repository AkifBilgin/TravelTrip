@using TravelTrip.Models.Entity
@model List<Blog>
@foreach (var x in Model)
{
    <div class="right">
        <div class="bot-left">
            <img src="@x.BlogImage" alt="" style="width:300px;height:200px"/>
        </div>
        <div class="left-text">

            <h4>@x.Uberschrift</h4>
            <span class="doller">@x.Datum.ToShortDateString()</span>
            <p>@x.Inhalt.Substring(0,160)...</p>
            <p><a href="/Blog/BlogDetail/@x.ID"><span class="read">Mehr Lesen >></span></a></p>
        </div>
    </div>

}
